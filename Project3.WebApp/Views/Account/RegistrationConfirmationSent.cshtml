@{
    Layout = null; // Standalone page
    ViewData["Title"] = "Registration Received - Restaurant Reviews";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account-styles.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        @* Left Column - Graphic Area (Consistent) *@
        <div class="login-graphic-col">
            <h1 class="graphic-title">Restaurant Reviews</h1>
        </div>

        @* Right Column - Message Area *@
        <div class="login-form-col">
            <div class="login-form-panel">
                <h1 class="login-title">Check Your Email</h1>
                <hr />
                <p>
                    Thank you for registering! Please check your email address for a confirmation link to activate your account.
                </p>
                <p>
                    @* Use ViewBag value passed from the controller action if needed, otherwise API handles email content *@
                    @* The link will expire in @(ViewBag.ExpiryMinutes / 60) hours. *@
                    The confirmation link is valid for a limited time.
                </p>
                <p>
                    If you don't see the email within a few minutes, please check your spam or junk folder.
                </p>
                <div class="extra-links mt-4">
                    <p>
                        <a asp-action="Login">Back to Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
