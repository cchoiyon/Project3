@* Uses Project3.Models.InputModels.ForgotPasswordModel *@
@model Project3.Shared.Models.InputModels.ForgotPasswordModel

@{
    Layout = null; // Standalone page
    ViewData["Title"] = "Forgot Password - Restaurant Reviews";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account-styles.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        @* Left Column - Graphic Area (Consistent) *@
        <div class="login-graphic-col">
            <h1 class="graphic-title">Restaurant Reviews</h1>
        </div>

        @* Right Column - Form Area *@
        <div class="login-form-col">
            <div class="login-form-panel">

                <h1 class="login-title">Forgot Password?</h1>
                <p class="login-subtitle">Enter your email or username and we'll send instructions to reset your password.</p>

                <section>
                    <form id="forgotPassword" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        @* Email or Username Input *@
                        <div class="mb-3">
                            <label asp-for="EmailOrUsername" class="form-label">Email or Username</label>
                            <input asp-for="EmailOrUsername" class="form-control" autocomplete="username email" aria-required="true" placeholder="Enter your email or username" />
                            <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                        </div>

                        @* Submit Button *@
                        <div>
                            <button type="submit" class="w-100 btn btn-primary login-btn">Send Reset Instructions</button>
                        </div>

                        @* Link back to Login *@
                        <div class="extra-links mt-3">
                            <p>
                                <a asp-action="Login">Back to Login</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>
