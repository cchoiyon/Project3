@model SearchCriteriaViewModel
@{
    ViewData["Title"] = "Search Restaurants";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<div class="welcome-section">
    <h1 class="display-5">Search Restaurants</h1>
    <p class="lead text-muted">Find restaurants by cuisine, city, or state</p>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        @* Include the search form partial *@
        <partial name="_RestaurantSearchFormPartial" model="Model" />
    </div>
</div>

@if (TempData["SearchResults"] != null)
{
    var searchResults = System.Text.Json.JsonSerializer.Deserialize<List<RestaurantViewModel>>(TempData["SearchResults"].ToString());
    
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="h4 mb-4">Search Results</h2>
            
            @if (searchResults.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var restaurant in searchResults)
                    {
                        <div class="col">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(restaurant.ProfilePhoto))
                                {
                                    <img src="@restaurant.ProfilePhoto" class="card-img-top" alt="@restaurant.Name">
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@restaurant.Name</h5>
                                    <p class="card-text">
                                        @if (!string.IsNullOrEmpty(restaurant.Cuisine))
                                        {
                                            <span class="badge bg-primary me-2">@restaurant.Cuisine</span>
                                        }
                                        @if (!string.IsNullOrEmpty(restaurant.City) || !string.IsNullOrEmpty(restaurant.State))
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-map-marker-alt me-1"></i>
                                                @restaurant.City@(!string.IsNullOrEmpty(restaurant.City) && !string.IsNullOrEmpty(restaurant.State) ? ", " : "")@restaurant.State
                                            </small>
                                        }
                                    </p>
                                    <a asp-action="Details" asp-route-id="@restaurant.RestaurantID" class="btn btn-outline-primary">
                                        <i class="fas fa-info-circle me-2"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No restaurants found matching your search criteria.
                </div>
            }
        </div>
    </div>
} 