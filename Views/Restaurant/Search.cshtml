@model SearchCriteriaViewModel
@{
    ViewData["Title"] = "Search Restaurants";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">Search Restaurants</h1>
            <p class="lead text-muted">Find restaurants by cuisine, city, or state</p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Search Filters</h5>
                    <partial name="_RestaurantSearchFormPartial" model="Model" />
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <hr />
                        <div class="d-flex justify-content-end">
                            <form asp-action="UpdateImages" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-sync-alt me-2"></i>Update Restaurant Images
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Clear any validation messages that might be showing
            $('.validation-summary-errors').remove();
            $('.field-validation-error').remove();
        });
    </script>
} 