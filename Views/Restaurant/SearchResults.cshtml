@model SearchCriteriaViewModel
@{
    ViewData["Title"] = "Search Results";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
    var searchResults = ViewBag.SearchResults as List<RestaurantViewModel> ?? new List<RestaurantViewModel>();
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">Restaurant Search</h1>
            <p class="text-muted">Find restaurants by cuisine, location, or browse all</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">Search Filters</h5>
                    <partial name="_RestaurantSearchFormPartial" model="Model" />
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0">Search Results</h5>
                        <span class="text-muted">Found @searchResults.Count restaurant(s)</span>
                    </div>

                    @if (searchResults.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Restaurant</th>
                                        <th>Location</th>
                                        <th>Cuisine</th>
                                        <th>Rating</th>
                                        <th>Price</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var restaurant in searchResults)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(restaurant.ProfilePhoto))
                                                    {
                                                        <img src="@restaurant.ProfilePhoto" alt="@restaurant.Name" class="me-3" style="width: 48px; height: 48px; object-fit: cover; border-radius: 4px;">
                                                    }
                                                    else
                                                    {
                                                        <div class="me-3 bg-light d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; border-radius: 4px;">
                                                            <i class="fas fa-utensils text-muted"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <h6 class="mb-0">@restaurant.Name</h6>
                                                        <small class="text-muted">@restaurant.ReviewCount reviews</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(restaurant.City) || !string.IsNullOrEmpty(restaurant.State))
                                                {
                                                    <span>@restaurant.City@(!string.IsNullOrEmpty(restaurant.City) && !string.IsNullOrEmpty(restaurant.State) ? ", " : "")@restaurant.State</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(restaurant.Cuisine))
                                                {
                                                    <span class="badge bg-primary">@restaurant.Cuisine</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="text-warning">
                                                    @for (var i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= Math.Round(restaurant.AverageRating))
                                                        {
                                                            <i class="fas fa-star"></i>
                                                        }
                                                        else if (i - 0.5 <= restaurant.AverageRating)
                                                        {
                                                            <i class="fas fa-star-half-alt"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star"></i>
                                                        }
                                                    }
                                                    <span class="ms-1 text-muted">@restaurant.AverageRating.ToString("F1")</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-success">@(new string('$', (int)Math.Round(restaurant.AveragePriceLevel)))</span>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@restaurant.RestaurantID" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-info-circle me-1"></i>Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            @if (TempData["SearchResults"] != null)
                            {
                                <span>No restaurants found matching your search criteria. Try adjusting your filters.</span>
                            }
                            else
                            {
                                <span>Use the search filters above to find restaurants.</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 