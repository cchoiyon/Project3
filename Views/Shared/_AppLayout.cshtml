@* File: Views/Shared/_AppLayout.cshtml *@
@* This is the main layout for the application pages like the dashboard. *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant Reviews</title>

    @* Link to Bootstrap CSS *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @* Link to Font Awesome (using CDN for example) - Needed for star icons *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    @* Link to your Site CSS *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* Allow specific pages to add custom head content *@
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <header>
        @* Basic Bootstrap Navigation Bar *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RestaurantReviews</a> @* Adjust controller/action as needed *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @* Link to Reviewer Home/Dashboard *@
                            <a class="nav-link text-dark" asp-area="" asp-controller="ReviewerHome" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            @* Link to Manage Reviews page *@
                            <a class="nav-link text-dark" asp-area="" asp-controller="ReviewerHome" asp-action="ManageReviews">Manage Reviews</a>
                        </li>
                        @* Add other nav links as needed (e.g., Admin section if applicable) *@
                    </ul>
                    <ul class="navbar-nav">
                        @* Placeholder for Login/Logout/User Info *@
                        @* You would typically use a Login Partial View here *@
                        <li class="nav-item">
                            <span class="navbar-text me-2">Welcome, @(User.Identity?.Name ?? "Guest")!</span>
                        </li>
                        <li class="nav-item">
                            @* Example Logout link - Implement actual logout logic in AccountController *@
                            <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
                                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @* Main Content Area *@
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @* Render the body content from the specific view *@
            @RenderBody()
        </main>
    </div>

    @* Footer *@
    <footer class="border-top footer text-muted mt-auto py-3 bg-light">
        <div class="container">
            &copy; @DateTime.Now.Year - Restaurant Reviews - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> @* Adjust controller/action as needed *@
        </div>
    </footer>

    @* Link to jQuery, Bootstrap JS and your site JS *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Render the Scripts section defined in specific views (e.g., for validation scripts) *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
