@* File: Views/Shared/_RestaurantSearchFormPartial.cshtml *@
@model Project3.Models.SearchCriteriaViewModel
@* This partial view defines the restaurant search form *@
@* It expects SearchCriteriaViewModel as its model, passed from the main view *@

<form asp-controller="ReviewerHome" asp-action="Search" method="post">
    @* Add AntiForgeryToken for POST security *@
    @Html.AntiForgeryToken()

    <div class="row g-3 align-items-end">
        <div class="col-md-4">
            <label asp-for="CuisineInput" class="form-label">Cuisine(s)</label>
            @* Using a text input for comma-separated cuisines based on SP parameter *@
            @* Added placeholder text *@
            <input asp-for="CuisineInput" class="form-control form-control-sm" placeholder="e.g., Italian, Mexican, Thai" />
            @* Add validation message placeholder if needed (for manual errors added in controller) *@
            <span asp-validation-for="CuisineInput" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="City" class="form-label">City</label>
            <input asp-for="City" class="form-control form-control-sm" placeholder="Enter city" />
            @* Added validation message placeholder *@
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label asp-for="State" class="form-label">State</label>
            <input asp-for="State" class="form-control form-control-sm" placeholder="e.g., PA" />
            @* Added validation message placeholder *@
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">Search Restaurants</button>
        </div>
    </div>
    @* General validation summary if needed *@
    <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div>
</form>
