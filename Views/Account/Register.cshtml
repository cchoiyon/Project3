@* ============================================================================ *@
@* Views/Account/Register.cshtml                                                *@
@* ============================================================================ *@
@model Project3.Models.RegisterModel

@{
    Layout = null;
    ViewData["Title"] = "Register - Yelp 2.0";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @* Link to Bootstrap CSS *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* --- Link to Shared Account Styles --- *@
    <link rel="stylesheet" href="~/css/account-styles.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        @* Left Column - Graphic Area (Consistent) *@
        <div class="login-graphic-col">
            <h1 class="graphic-title">Yelp 2.0</h1>
        </div>

        @* Right Column - Form Area (Adapted for Registration) *@
        <div class="login-form-col">
            <div class="login-form-panel">

                <h1 class="login-title">Create Account</h1>
                <p class="login-subtitle">Join the knock-off Yelp experience!</p>

                <section>
                    @* Use overflow-auto for potentially long forms on smaller heights *@
                    @* Removed max-height style, handled by column overflow now *@
                    <form id="register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        @* Username Input *@
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" placeholder="Choose a username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        @* Email Input *@
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        @* Password Input *@
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Create a password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        @* Confirm Password Input *@
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        @* User Type Selection *@
                        <div class="mb-3">
                            <label class="form-label d-block">Register As:</label> @* d-block for spacing *@
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="UserType" value="reviewer" id="userTypeReviewer" checked>
                                <label class="form-check-label" for="userTypeReviewer">Reviewer</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="UserType" value="restaurantRep" id="userTypeRep">
                                <label class="form-check-label" for="userTypeRep">Restaurant Rep</label>
                            </div>
                            <span asp-validation-for="UserType" class="text-danger d-block"></span> @* d-block for spacing *@
                        </div>

                        @* Remember Login ID Checkbox *@
                        <div class="mb-3 form-check">
                            <input class="form-check-input" asp-for="RememberLoginId" />
                            <label asp-for="RememberLoginId" class="form-check-label">@Html.DisplayNameFor(m => m.RememberLoginId)</label>
                            <span asp-validation-for="RememberLoginId" class="text-danger"></span>
                        </div>

                        @* Security Questions Section *@
                        <div class="security-questions">
                            <h4>Security Questions</h4>
                            <hr />
                            @* Security Question 1 *@
                            <div class="mb-3">
                                <label asp-for="SecurityQuestion1" class="form-label">Security Question 1</label>
                                <input asp-for="SecurityQuestion1" class="form-control" aria-required="true" placeholder="Enter your first question" />
                                <span asp-validation-for="SecurityQuestion1" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="SecurityAnswer1" class="form-label">Answer 1</label>
                                <input asp-for="SecurityAnswer1" class="form-control" aria-required="true" placeholder="Answer to question 1" />
                                <span asp-validation-for="SecurityAnswer1" class="text-danger"></span>
                            </div>
                            @* Security Question 2 *@
                            <div class="mb-3">
                                <label asp-for="SecurityQuestion2" class="form-label">Security Question 2</label>
                                <input asp-for="SecurityQuestion2" class="form-control" aria-required="true" placeholder="Enter your second question" />
                                <span asp-validation-for="SecurityQuestion2" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="SecurityAnswer2" class="form-label">Answer 2</label>
                                <input asp-for="SecurityAnswer2" class="form-control" aria-required="true" placeholder="Answer to question 2" />
                                <span asp-validation-for="SecurityAnswer2" class="text-danger"></span>
                            </div>
                            @* Security Question 3 *@
                            <div class="mb-3">
                                <label asp-for="SecurityQuestion3" class="form-label">Security Question 3</label>
                                <input asp-for="SecurityQuestion3" class="form-control" aria-required="true" placeholder="Enter your third question" />
                                <span asp-validation-for="SecurityQuestion3" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="SecurityAnswer3" class="form-label">Answer 3</label>
                                <input asp-for="SecurityAnswer3" class="form-control" aria-required="true" placeholder="Answer to question 3" />
                                <span asp-validation-for="SecurityAnswer3" class="text-danger"></span>
                            </div>
                        </div>

                        @* Submit Button *@
                        <div>
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-primary login-btn">Register</button>
                        </div>

                        @* Link back to Login *@
                        <div class="extra-links mt-3">
                            <p>
                                <a asp-action="Login">Already have an account? Log in</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>