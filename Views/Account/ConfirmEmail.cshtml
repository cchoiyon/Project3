@* Example Structure for Views/Account/ConfirmEmail.cshtml *@
@{
    ViewData["Title"] = "Email Confirmation";
    // Layout = "_Layout"; // Or "_AccountLayout"
    var statusClass = ViewBag.ConfirmationStatus == "Success" ? "alert-success" : "alert-danger";
}

<h1>Email Confirmation</h1>
<hr />

@if (ViewBag.Message != null)
{
    <div class="alert @statusClass" role="alert">
        @ViewBag.Message
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        Could not determine confirmation status. Please try again or contact support.
    </div>
}

@if (ViewBag.ConfirmationStatus == "Success")
{
    <p>
        <a asp-action="Login" asp-controller="Account" class="btn btn-primary">Click here to Log In</a>
    </p>
}
@if (ViewBag.ConfirmationStatus == "Error")
{
    // Optionally add link to register again or contact support
    <p>
        <a asp-action="Register" asp-controller="Account">Register again?</a>
    </p>
}
