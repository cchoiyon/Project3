@{
    Layout = null; // Standalone page
    ViewData["Title"] = "Forgot Password Confirmation - Restaurant Reviews";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account-styles.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        @* Left Column - Graphic Area (Consistent) *@
        <div class="login-graphic-col">
            <h1 class="graphic-title">Restaurant Reviews</h1>
        </div>

        @* Right Column - Message Area *@
        <div class="login-form-col">
            <div class="login-form-panel">
                <h1 class="login-title">Check Your Email</h1>
                <hr />
                <p>
                    @* Display message set by controller *@
                    @ViewBag.Message ?? "If an account matching your submission exists, instructions to reset your password have been sent to the associated email address. Please check your inbox (and spam folder)."
                </p>
                <div class="extra-links mt-4">
                    <p>
                        <a asp-action="Login">Back to Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
