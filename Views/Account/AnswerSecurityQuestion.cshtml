@* ============================================================================ *@
@* Views/Account/AnswerSecurityQuestion.cshtml                                  *@
@* ============================================================================ *@
@model Project3.Models.AnswerSecurityQuestionModel

@{
    Layout = null;
    ViewData["Title"] = "Security Question - Yelp 2.0";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @* Link to Bootstrap CSS *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* --- Link to Shared Account Styles --- *@
    <link rel="stylesheet" href="~/css/account-styles.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        @* Left Column - Graphic Area (Consistent) *@
        <div class="login-graphic-col">
            <h1 class="graphic-title">Yelp 2.0</h1>
        </div>

        @* Right Column - Form Area (Adapted for Answering Security Question) *@
        <div class="login-form-col">
            <div class="login-form-panel">

                <h1 class="login-title">Security Check</h1>
                <p class="login-subtitle">Please answer your security question below.</p>

                <section>
                    <form id="answerQuestion" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        @* Hidden fields for context *@
                        <input asp-for="UserId" type="hidden" />
                        <input asp-for="QuestionNumber" type="hidden" />

                        @* Display the Security Question *@
                        <div class="mb-3 security-question-text">
                            @Model.QuestionText
                        </div>

                        @* Answer Input *@
                        <div class="mb-3">
                            <label asp-for="Answer" class="form-label">Your Answer</label>
                            <input asp-for="Answer" class="form-control" autocomplete="off" aria-required="true" placeholder="Enter your answer" />
                            <span asp-validation-for="Answer" class="text-danger"></span>
                        </div>

                        @* Submit Button *@
                        <div>
                            <button type="submit" class="w-100 btn btn-primary login-btn">Submit Answer</button>
                        </div>

                        @* Link back to Login *@
                        <div class="extra-links mt-3">
                            <p>
                                <a asp-action="Login">Back to Login</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>